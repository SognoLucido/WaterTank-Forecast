        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            Spacing="50">

            <Button
                Width="100"
                Background="#7c1e8f"
                Content="Back"
				Command="{Binding GobackCommand}"
                Foreground="White" />

            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Black"
                Text="Options" />
            <Button
                Width="100"
                Classes="accent"
				Command=""
                Content="Continue" />




        </StackPanel>
    </Grid>
