<UserControl
    x:Class="WaterTankMock_MQTT.Views.OptionsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WaterTankMock_MQTT.ViewModels"
    d:DesignHeight="324"
    d:DesignWidth="600"
    x:DataType="vm:OptionsViewModel"
    mc:Ignorable="d">


    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:OptionsViewModel />
    </Design.DataContext>




    <Grid
        Background="White"
        RowDefinitions="6*,*"
        ShowGridLines="False">

        <Border
            Margin="10"
            Background="#f9fbfa"
            BorderBrush="Black"
            BorderThickness="1"
            ClipToBounds="False"
            CornerRadius="10" />

        <Grid
            Margin="20"
            ColumnDefinitions="*,0.2*"
            RowDefinitions="*,*,*"
            ShowGridLines="False">

            <Grid.Styles>
                <Style Selector="Border">
                    
                    <Setter Property="BorderBrush" Value="#e8edeb" />
                </Style>
            </Grid.Styles>

            <Border BorderThickness="1,1,0,1" CornerRadius="10,0,0,10">
                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextWrapping="Wrap">
                    Seed the data(send to the broker the initial default data : capacity ,currentlvl ecc.. ) before the simulation
                </TextBlock>

            </Border>
            <Border
                Grid.Column="1"
                BorderThickness="1"
                CornerRadius="0,10,10,0" >
				<ToggleSwitch HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" IsChecked="True" />
			</Border>

        </Grid>
		
